# Oracle WMS API Configuration
# ============================
# This tap connects to Oracle WMS REST API (NOT direct database)
# Architecture: Oracle WMS Cloud API → tap-oracle-wms → Singer Protocol → Target

# REQUIRED: Oracle WMS API Base URL
# Example: https://company.wms.oraclecloud.com
# Example: https://wms-stage.company.com/api/v1
TAP_ORACLE_WMS_BASE_URL=https://your-company.wms.oraclecloud.com

# REQUIRED: Authentication Type
# Options: basic, oauth, bearer
TAP_ORACLE_WMS_AUTH_TYPE=basic

# REQUIRED: API Credentials
TAP_ORACLE_WMS_USERNAME=your_wms_api_user
TAP_ORACLE_WMS_PASSWORD=your_wms_api_password

# Optional: OAuth Settings (if auth_type=oauth)
TAP_ORACLE_WMS_CLIENT_ID=your_oauth_client_id
TAP_ORACLE_WMS_CLIENT_SECRET=your_oauth_client_secret
TAP_ORACLE_WMS_OAUTH_TOKEN_URL=https://your-company.wms.oraclecloud.com/oauth/token

# Optional: Bearer Token (if auth_type=bearer)
TAP_ORACLE_WMS_API_KEY=your_bearer_token_here

# REQUIRED: API Version and Paths
TAP_ORACLE_WMS_API_VERSION=v1
TAP_ORACLE_WMS_API_PATH=/api

# Performance Settings
TAP_ORACLE_WMS_BATCH_SIZE=1000
TAP_ORACLE_WMS_REQUEST_TIMEOUT=300
TAP_ORACLE_WMS_MAX_RETRIES=3
TAP_ORACLE_WMS_BACKOFF_FACTOR=2

# Pagination Settings
TAP_ORACLE_WMS_PAGE_SIZE=100
TAP_ORACLE_WMS_PAGE_MODE=sequenced  # IMPORTANT: Use sequenced for better performance

# Entity Selection (comma-separated list)
# Common WMS entities: allocation, order_hdr, order_dtl, item_master, location, inventory
TAP_ORACLE_WMS_ENTITIES=allocation,order_hdr,order_dtl

# Date Range for Incremental Sync
TAP_ORACLE_WMS_START_DATE=2024-01-01T00:00:00Z
TAP_ORACLE_WMS_END_DATE=2024-12-31T23:59:59Z

# SSL/TLS Settings
TAP_ORACLE_WMS_VERIFY_SSL=true
TAP_ORACLE_WMS_SSL_CERT_PATH=/path/to/cert.pem  # Optional

# Logging Configuration
TAP_ORACLE_WMS_LOG_LEVEL=INFO
TAP_ORACLE_WMS_LOG_FILE=tap-oracle-wms.log

# Advanced Features
TAP_ORACLE_WMS_FLATTEN_ID_OBJECTS=true
TAP_ORACLE_WMS_FLATTEN_KEY_OBJECTS=true
TAP_ORACLE_WMS_FLATTEN_URL_OBJECTS=true
TAP_ORACLE_WMS_PRESERVE_NESTED_AS_JSON=true

# Rate Limiting (requests per second)
TAP_ORACLE_WMS_RATE_LIMIT=10

# Stream Maps (optional JSON string)
# TAP_ORACLE_WMS_STREAM_MAPS={"order_hdr": {"rename": {"order_id": "id"}}}

# State Management
TAP_ORACLE_WMS_STATE_FILE=state.json

# Debug Mode
TAP_ORACLE_WMS_DEBUG=false

# Example Oracle WMS Cloud URLs by Region:
# ========================================
# US: https://company.wms.us1.oraclecloud.com
# EU: https://company.wms.eu1.oraclecloud.com
# APAC: https://company.wms.ap1.oraclecloud.com
# Custom: https://wms.company.com/api/v1