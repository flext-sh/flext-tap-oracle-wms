# Oracle WMS Tap Configuration
# Copy this file to .env and fill in your actual values

# === CORE CONNECTION SETTINGS ===
# Base URL for your Oracle WMS instance (required)
TAP_ORACLE_WMS_BASE_URL=https://your-wms-instance.com

# === AUTHENTICATION ===
# Authentication method: basic or oauth2
TAP_ORACLE_WMS_AUTH_METHOD=basic

# Basic authentication credentials
TAP_ORACLE_WMS_USERNAME=your_username
TAP_ORACLE_WMS_PASSWORD=your_password

# OAuth2 authentication (if using oauth2)
# WMS_OAUTH_CLIENT_ID=your_client_id
# WMS_OAUTH_CLIENT_SECRET=your_client_secret
# WMS_OAUTH_TOKEN_URL=https://your-oauth-server.com/token
# WMS_OAUTH_SCOPE=wms.read

# === WMS CONTEXT ===
# Company code (* for all companies)
TAP_ORACLE_WMS_COMPANY_CODE=*

# Facility code (* for all facilities)
TAP_ORACLE_WMS_FACILITY_CODE=*

# === PERFORMANCE SETTINGS ===
# Records per page (1-1250, default: 1000)
TAP_ORACLE_WMS_PAGE_SIZE=1000

# Request timeout in seconds (default: 120)
TAP_ORACLE_WMS_REQUEST_TIMEOUT=120

# Maximum retry attempts (default: 3)
TAP_ORACLE_WMS_MAX_RETRIES=3

# === SSL/TLS SETTINGS ===
# Verify SSL certificates (true/false, default: true)
TAP_ORACLE_WMS_VERIFY_SSL=true

# Path to CA bundle file (optional)
# WMS_SSL_CA_FILE=/path/to/ca-bundle.crt

# === ENTITY SELECTION (optional) ===
# Comma-separated list of specific entities to extract
# WMS_ENTITIES=item,location,inventory,order_header

# === INCREMENTAL SYNC (optional) ===
# Enable incremental sync (true/false, default: true)
TAP_ORACLE_WMS_ENABLE_INCREMENTAL=true

# Start date for data extraction (ISO 8601 format)
# TAP_ORACLE_WMS_START_DATE=2024-01-01T00:00:00Z

# Safety overlap in minutes for incremental sync (default: 5)
TAP_ORACLE_WMS_INCREMENTAL_OVERLAP_MINUTES=5

# === LOGGING ===
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
TAP_ORACLE_WMS_LOG_LEVEL=INFO

# === TEST CONFIGURATION (for E2E tests) ===
# Maximum records to extract during tests
TAP_ORACLE_WMS_RECORD_LIMIT=10

# Test-specific entities (comma-separated)
# WMS_TEST_ENTITIES=item,location

# === ADVANCED FEATURES (optional) ===
# Enable developer mode with additional logging
# WMS_DEV_MODE=false

# Mock API calls for testing
# WMS_MOCK_API_CALLS=false

# Enable schema flattening (default: true)
# WMS_FLATTENING_ENABLED=true

# Maximum depth for schema flattening (default: 3)
# WMS_FLATTENING_MAX_DEPTH=3

# === NOTES ===
# 1. Environment variables override config.json settings
# 2. For production use, ensure all secrets are properly secured
# 3. Use strong passwords and rotate credentials regularly
# 4. Consider using a secrets management system for sensitive values