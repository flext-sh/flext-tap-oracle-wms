# Oracle WMS TAP Configuration
# Copy this file to .env and fill in your actual values

AUTH_METHOD=basic
# === ORACLE WMS CONNECTION ===
BASE_URL=https://your-wms-instance.oracle.com
PASSWORD=your_wms_password
USERNAME=your_wms_username

# === WMS CONTEXT ===
COMPANY_CODE=*
FACILITY_CODE=*

CONNECT_TIMEOUT=30
MAX_PARALLEL_STREAMS=5
# === PERFORMANCE SETTINGS ===
PAGE_SIZE=1000
READ_TIMEOUT=120
REQUEST_TIMEOUT=7200

# === PAGINATION ===
PAGINATION_MODE=sequenced
RETRY_COUNT=3
RETRY_MAX_WAIT=60
RETRY_WAIT_MULTIPLIER=2.0

USER_AGENT=tap-oracle-wms/1.0
# === SSL/SECURITY ===
VERIFY_SSL=true

ENTITY_CACHE_TTL=7200
SCHEMA_CACHE_TTL=3600
# === SCHEMA DISCOVERY ===
SCHEMA_DISCOVERY_METHOD=auto
SCHEMA_SAMPLE_SIZE=5

LOG_LEVEL=INFO
METRICS_PORT=9090
# === MONITORING ===
MONITORING_ENABLED=false

# === CIRCUIT BREAKER ===
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# === DATA SELECTION ===
# Uncomment and modify as needed:
# ENTITIES=["item", "location", "inventory"]
# START_DATE=2024-01-01T00:00:00Z
# END_DATE=2024-12-31T23:59:59Z

COMPRESSION_ENABLED=true
HTTP2_ENABLED=false
TEST_CONNECTION=true
VALIDATE_CONFIG=true
# === ADVANCED FEATURES ===
VERIFY_ENTITY_ACCESS=false

# === INCREMENTAL SYNC ===
ENABLE_INCREMENTAL=true
INCREMENTAL_LOOKBACK_HOURS=24

# === OAUTH2 (if using oauth2 auth) ===
# OAUTH_CLIENT_ID=your_client_id
# OAUTH_CLIENT_SECRET=your_client_secret
# OAUTH_TOKEN_URL=https://your-wms-instance.oracle.com/oauth/token
# OAUTH_SCOPE=wms.read
